<%
  var cssClass = "style" + (index % 12 + 1);
%>

<article class="<%- cssClass %>">
  <a href="<%- config.root %><%- item.path %>">
    <img src="<%- item.cover_index || theme.default_cover_index %>" alt="" />
    <h4><%- item.title || theme.default_post_title || "Untitled" %></h4>
    <div class="content">
      <p><%- item.subtitle || "" %></p>
    </div>
  </a>
</article>