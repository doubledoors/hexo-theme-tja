<%
  var cssClass = "style" + (index % 12 + 1);
%>
  <div class="gallery-item">
    <% if (item.casestudy === undefined) { %>
    <a href="<%- item.index_url %>">
    <% } else { %>
    <a href="<%- config.root %><%- item.path %>">
    <% } %>
    <img class="img-responsive" src="<%- item.thumb || theme.default_image_thumb %>" alt="<%- item.title %>" />
    </a>
    <div class="overlay overlay-bottom">
      <% if (item.summary) { %>
        <h5><%- item.summary %></h5>
      <% } %>
      <h4><%- item.title || theme.default_post_title || "Untitled" %></h4>
      <hr />
      <div class="gallery-item-actions">
        <% if (item.casestudy === undefined) { %>
          <a href="<%- item.index_url %>" target='_blank' rel="noopener noreferrer">Project site &rarr;</a>
        <% } else { %>
          <a href="<%- config.root %><%- item.path %>">Read more</a>
        <% } %>
        <div class="icons">
          <% if (item.pkg) { %>
          <a href="<%- item.pkg %>">
            <svg data-name="npm logo" class="icon icon-npm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32.47 12.66">
